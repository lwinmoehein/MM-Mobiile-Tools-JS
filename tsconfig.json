{
	"compilerOptions": {
		"module": "node16",
		"target": "es2022",	
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir":"dist",
		"declaration": true,
		"declarationDir": "dist/types",
	},
	"include": ["src/**/*.ts"],       
	"exclude": ["node_modules", "dist"]
}
