{
	"compilerOptions": {
		"module": "node16",
		"target": "es2022",	
		"strict": true,
		"esModuleInterop":true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir":"lib",
		"declaration": true,
		"declarationDir": "lib",
	},
	"include": ["src/**/*.ts"],       
	"exclude": ["node_modules", "lib"],
}
